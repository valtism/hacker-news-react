{
  "name": "hacker-news-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^2.0.5",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^7.2.1",
    "autoprefixer": "^9.7.4",
    "cssnano": "^4.1.10",
    "date-fns": "^2.9.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "tailwindcss": "^1.1.4"
  },
  "scripts": {
    "start": "npm-run-all -p style:watch react",
    "build": "NODE_ENV='production' npm-run-all -s style react:build",
    "react": "react-scripts start",
    "react:build": "react-scripts build",
    "style": "postcss src/style.src.css -o src/index.css",
    "style:watch": "postcss src/style.src.css -o src/index.css --watch",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
